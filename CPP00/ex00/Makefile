NAME = megaphone

CC		= c++
FLAGS	= -Wall -Wextra -Werror -std=c++98 -pedantic

YELLOW = \033[33m
GREEN = \033[38;2;0;255;0m
RESET = \033[0m

all: $(NAME)

$(NAME):
	@echo "$(YELLOW)$$BANNER$(RESET)"
	@ $(CC) $(FLAGS) megaphone.cpp -o $(NAME)
	@echo "$(GREEN)Compilation went succesfully âœ…$(RESET)"

clean:
	@rm -rf $(NAME)

fclean: clean
	@rm -rf $(NAME)

re: clean all

.PHONY: all clean fclean re

define BANNER

 _   .-')       ('-.                ('-.      _ (`-.  ('-. .-.                  .-') _   ('-.   
( '.( OO )_   _(  OO)              ( OO ).-. ( (OO  )( OO )  /                 ( OO ) )_(  OO)  
 ,--.   ,--.)(,------. ,----.      / . --. /_.`     \,--. ,--. .-'),-----. ,--./ ,--,'(,------. 
 |   `.'   |  |  .---''  .-./-')   | \-.  \(__...--''|  | |  |( OO'  .-.  '|   \ |  |\ |  .---' 
 |         |  |  |    |  |_( O- ).-'-'  |  ||  /  | ||   .|  |/   |  | |  ||    \|  | )|  |     
 |  |'.'|  | (|  '--. |  | .--, \ \| |_.'  ||  |_.' ||       |\_) |  |\|  ||  .     |/(|  '--.  
 |  |   |  |  |  .--'(|  | '. (_/  |  .-.  ||  .___.'|  .-.  |  \ |  | |  ||  |\    |  |  .--'  
 |  |   |  |  |  `---.|  '--'  |   |  | |  ||  |     |  | |  |   `'  '-'  '|  | \   |  |  `---. 
